    <version>0.0.3</version>
    <description>PLG_RSFILES_FIREWALL</description>
    <files>
        <filename plugin="firewall">firewall.php</filename>
        <filename>helper.php</filename>
    </files>
    <languages folder="language">
        <language tag="en-GB">en-GB/en-GB.rsfiles_firewall.sys.ini</language>
    </languages>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field type="radio" default="E" name="ip_list_type" label="PLG_RSFILES_FIREWALL_CONFIG_IP_LIST_TYPE" description="PLG_RSFILES_FIREWALL_CONFIG_IP_LIST_TYPE_DESC">
                    <option value="E">PLG_RSFILES_FIREWALL_CONFIG_IP_LIST_TYPE_OPTION_E</option>
                    <option value="B">PLG_RSFILES_FIREWALL_CONFIG_IP_LIST_TYPE_OPTION_B</option>
                </field>
                <field type="textarea" name="ip_list" rows="10" label="PLG_RSFILES_FIREWALL_CONFIG_IP_LIST" description="PLG_RSFILES_FIREWALL_CONFIG_IP_LIST_DESC" />
            </fieldset>
        </fields>
    </config>
</extension>
